<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path, :html => { :id => 'loginForm'}) do |f| %>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>
<p>New user? <%= link_to "Register now!", new_identity_path%>  
  
  
