<h1><%= I18n.translate('identities.attributes.nickname').capitalize + ": #{@identity.nickname}" %></h1>
<p><%=  I18n.translate('identities.attributes.name').capitalize     + ": #{@identity.firstname} #{@identity.surname}" %></p>
<%= gravatar_for @identity %>

<% if signed_in? %>
<%= link_to I18n.t('identities.show.link.edit'), :action => "edit", :id => @identity.id %><br />
<%= link_to I18n.t('identities.show.link.delete'), {:action => "destroy", :id => @identity.id}, :method => "delete", :confirm => I18n.t('identities.show.confirm.delete') %><br />
<% end %>
